<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THE TEAM"
        android:id="@+id/tvv"
        android:background="#ff5596ff"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal"
     >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="10dp"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/mahimas"
            app:border_width="2dp"
            app:border_color="#FF000000" />

        <TextView
            android:id="@+id/tv1"
            android:layout_margin="50sp"
 android:textColor="#ff5596ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="MAHIMA SINGH DEO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
       >

        <TextView
            android:layout_below="@+id/im1"
            android:layout_margin="50sp"

            android:id="@+id/tv2"
            android:textColor="#ff5596ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANANYA S N" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_margin="10sp"
            android:layout_marginLeft="70sp"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/ananyas"
            app:border_width="2dp"
            app:border_color="#FF000000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
       >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/harivatsav"
            app:border_width="2dp"
            android:layout_margin="10sp"
            app:border_color="#FF000000" />

        <TextView
            android:id="@+id/tv3"
            android:layout_margin="50sp"
            android:textColor="#ff5596ff"
            android:layout_toRightOf="@+id/im3"
            android:layout_below="@+id/im2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="HARI VATSAV" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     >

        <TextView
            android:id="@+id/tv4"
            android:layout_below="@+id/im3"
            android:layout_width="wrap_content"
            android:layout_margin="50sp"

            android:textColor="#ff5596ff"
            android:layout_height="wrap_content"
            android:text="KEWAL KISHAN G" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/kewalk"
            app:border_width="2dp"
            android:layout_margin="10sp"
            app:border_color="#FF000000" />

    </LinearLayout>

</LinearLayout>