<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THE DEVELOPERS"
        android:id="@+id/tvv"
        android:background="#ff00ff"
        android:textSize="20sp"
      android:gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="#0ff0ff">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/mahimas"
        app:border_width="2dp"
        app:border_color="#FF000000"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_margin="30sp"
         android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="MAHIMA SINGH DEO" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#0ff089">
        <TextView
            android:layout_below="@+id/im1"
android:layout_margin="50sp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANANYA" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/ananyas"
            app:border_width="2dp"
            app:border_color="#FF000000"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#0ff0FF">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/harivatsav"
            app:border_width="2dp"
            app:border_color="#FF000000"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_margin="50sp"
        android:layout_toRightOf="@+id/im3"
        android:layout_below="@+id/im2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HARI VATSAV" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#0ff099">
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@+id/im3"
        android:layout_width="wrap_content"
        android:layout_margin="50sp"
        android:layout_height="wrap_content"
        android:text="KEWAL KISHAN G" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/kewalk"
        app:border_width="2dp"
        app:border_color="#FF000000"/>

</LinearLayout>

</LinearLayout>