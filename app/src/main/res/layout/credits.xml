<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THE DEVELOPERS"
        android:id="@+id/tvv"
        android:background="#ff00ff"
        android:textSize="20sp"
      android:gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#0ff0ff">
    <ImageView
        android:layout_marginTop="30dp"
android:layout_margin="10sp"
        android:background="#00afff"
        android:id="@+id/im1"
        android:src="@drawable/mahima"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_margin="50sp"
         android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="MAHIMA SINGH DEO" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0ff089">
        <TextView
            android:layout_below="@+id/im1"
android:layout_margin="50sp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANANYA" />
    <ImageView
        android:id="@+id/im2"
        android:src="@drawable/ananya"
 android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0ff0FF">
    <ImageView
        android:id="@+id/im3"
        android:layout_below="@+id/im2"
        android:src="@drawable/harivat"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv3"
        android:layout_margin="50sp"
        android:layout_toRightOf="@+id/im3"
        android:layout_below="@+id/im2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HARI VATSAV" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0ff099">
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@+id/im3"
        android:layout_width="wrap_content"
        android:layout_margin="50sp"
        android:layout_height="wrap_content"
        android:text="KEWAL KISHAN G" />
    <ImageView

        android:id="@+id/im4"
       android:layout_margin="10sp"
        android:src="@drawable/kewal"
        android:background="#adffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>

</LinearLayout>